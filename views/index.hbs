<div class="container text-center mt-5">
  <i class="fas fa-link fa-10x"></i>
</div>

<div class="container row mx-auto justify-content-center mt-5 img {{#if statusURL}}hidden{{/if}}" id="test">
  <div class="col-8 text-center">
    <form action="/" method="POST" class=" d-flex">
      <input type="text" class="form-control" name="URL" id="URL" placeholder="Please enter the URL" value="{{outputURL}}">
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

{{!-- alert: if URL is not valid --}}
{{#ifeq statusURL "invalid"}}
<div class="container alert row mx-auto justify-content-center mt-2" id="test2">
  <div class="col-8 text-center">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      Unable to shorten that link.<strong>The link is not a valid URL!</strong>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
</div>
{{/ifeq}}

{{!-- alert: if URL is valid --}}
{{#ifeq statusURL "valid"}}
<div class="container alert row mx-auto justify-content-center mt-2" id="test2">
  <div class="col-8">
    <div class="alert alert-success text-center">
      <strong>URL has been successfully shorten!</strong> Please click the 'Copy' button
      <button type="button" class="btn btn-info ">
        COPY
      </button>
    </div>
  </div>
</div>
{{/ifeq}}

{{!-- alert: if URL already exist --}}
{{#ifeq statusURL "already"}}
<div class="container alert row mx-auto justify-content-center mt-2" id="test2">
  <div class="col-8">
    <div class="alert alert-warning text-center">
      <strong>URL has been shortened!</strong> Please click the 'Copy' button
      <button type="button" class="btn btn-info ">
        COPY
      </button>
    </div>
  </div>
</div>
{{/ifeq}}